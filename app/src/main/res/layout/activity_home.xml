<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="749dp"
        android:layout_height="894dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background1" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="476dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/gradient_white_square_rounded"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/black_square_rounded"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/water_drop" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/monda1"
                    android:text="WATER" />

                <TextView
                    android:id="@+id/lblwaterStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#3CA9A9"
                    android:textStyle="bold"
                    android:fontFamily="@font/monda1"
                    android:text="ACTIVE" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/lblWaterUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monda1"
                    android:text="755.20"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/view"
                    android:layout_width="120dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"
                    android:layout_height="2dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:fontFamily="@font/monda1"
                    android:text="1000" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:fontFamily="@font/monda1"
                    android:text="Units Used" />

                <Button
                    android:id="@+id/btnWaterTopUp"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="12.5dp"
                    android:background="@drawable/blue_square_rounded"
                    android:backgroundTint="#3CA9A9"
                    android:fontFamily="@font/monda1"
                    android:text="Details"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"
                 />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/black_square_rounded"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flash_onlarge" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/monda1"
                    android:text="ELECTRICITY"/>

                <TextView
                    android:id="@+id/lblelecStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="#FE6152"
                    android:textStyle="bold"
                    android:fontFamily="@font/monda1"
                    android:text="ACTIVE" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/lblElecUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:fontFamily="@font/monda1"
                    android:text="800" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="120dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:fontFamily="@font/monda1"
                    android:text="1000" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:fontFamily="@font/monda1"
                    android:text="Units Used" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="12.5dp"
                    android:backgroundTint="#FE6152"
                    android:fontFamily="@font/monda1"
                    android:background="@drawable/red_square_rounded"
                    android:text="Details"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/red_square_rounded"

            app:cardBackgroundColor="#FE6152"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/prgWater"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/circular_progress_bar_water"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/prgElec"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="117dp"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/circular_progress_bar_elec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/monda1"
        android:text="237 blahh"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/khts_meters_website_favicon_white" />

    <TextView
        android:id="@+id/txtMeterNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/monda1"
        android:text="M002"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnRecharge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/recharge_button_icon"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>